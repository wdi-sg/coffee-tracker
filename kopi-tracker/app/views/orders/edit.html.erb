<h1> Edit order page </h1>

<%= form_with scope: :orders, model: @order, local: true do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.hidden_field :customer_id, :value => @id%>
  </p>

  <%= form.collection_check_boxes :kopi_ids, @kopis, :id, :name %>


  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', order_path(@id) %>