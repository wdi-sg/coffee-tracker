<h1> You orders </h1>

<% if customer_signed_in? && current_customer.id == @id %>
		<% @orders.each do |order| %>
				<p> Order id: <%=  order.id %> </p>
				<p> Order Name: <%= order.name %> </p>
				<% @kopis.each do |kopi| %>
						<p> Kopi's order: <%= kopi.name %> </p>
				<% end %>
				<p> <%= link_to 'Edit order', edit_order_path(order) %> || <%= link_to 'Delete order', order_path(order), method: :delete, data: {confirm: 'Are you sure you want to delete this order? '} %></p>
		<% end %>
<% end %>


