<h1> Edit kopi page </h1>


<%= form_with scope: :kopis, model: @kopi, local: true do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p><%= form.collection_select :origin_id, @origins, :id, :location %></p>
  <p><%= form.collection_select :roast_id, @roasts, :id, :roastedness %></p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<p><%= link_to 'Back', origin_path(@kopi.origin_id) %></p>