<h1> Add new Kopi for <%= @origin.location %> origin</h1>

<%= form_with scope: :kopis, url: kopis_path, local: true do |form| %>


  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :origin_id %><br>
    <%= form.text_field :origin_id, :value => @origin.id, :readonly => true %>
  </p>

  <%= form.collection_select :roast_id, @roasts, :id, :roastedness %>

  <p>
    <%= form.submit %>
  </p>
<% end %>