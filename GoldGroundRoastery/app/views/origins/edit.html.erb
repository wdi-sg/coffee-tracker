<div class="pageWrapper">

	<h2>Edit <%= @origin.location.capitalize %></h2>

	<%= form_with(model: @origin, local: true) do |form| %>

		<p>
			<%= form.label :name, 'Origin Name:' %>
			<%= form.text_field :name %>
		</p>

		<p>
			<%= form.label :location, 'Origin Location:' %>
			<%= form.text_field :location %>
		</p>

		<p>
			<%= form.label :phone, 'Contact Number:' %>
			<%= form.text_field :phone %>
		</p>

		<p>
			<%= form.submit 'Save', :class => 'actionButton' %>
			<%= link_to 'Cancel', :back, :class => 'actionButton'%>
		</p>
	<% end %>

</div>