<br>
<h2><%= @customer.name %>'s Kopi</h2>

<table class="table">
	<thead>
    <tr>
      <th scope="col">Kopi</th>
      <th scope="col">Roast</th>
      <th scope="col">Origin</th>
      <th scope="col">Price/ lb</th>
    </tr>
  </thead>
  <tbody>
    <% @customer.kopis.each do |kopi| %>
    	<tr>
      	<td><%= kopi.name %></td>
      	<td><%= kopi.roast.kind %></td>
      	<td><%= kopi.origin.location %></td>
      	<td>$<%= kopi.price %></td>
    	</tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Back', customers_path, :class => "btn btn-secondary"%>