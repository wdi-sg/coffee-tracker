<h1>Edit Kopi</h1>

<%= form_with scope: :kopi, model: @kopi, local: true do |form| %>

	<p>
		<%= form.label :name %><br>
		<%= form.text_field :name %>
	</p>

	<p>
		<%= form.label :pricePerPound %><br>
		<%= form.number_field :pricePerPound %>
	</p>

	<p>
		<%= form.collection_select :origin_id, @orgins, :id, :name %>
	</p>

	<p>
		<%= form.collection_select :roast_id, @roasts, :id, :name %>
	</p>

	<p>
		<%= form.submit %>
	</p>

<% end %>