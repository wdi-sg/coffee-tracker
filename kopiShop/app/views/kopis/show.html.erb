<ul>
	<% @kopi.customers.each do |customer| %>
		<li><%= customer.name %></li>
	<% end %>
</ul>

<%= link_to 'Kopi Index', root_path %>
<%= link_to "Delete", @kopi, :confirm => "Are you sure?", :method => :delete %>