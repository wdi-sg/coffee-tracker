<h1>Edit customer's coffee</h1>
<h3><%= @customer.name %></h3>
<%= form_with scope: :customer, model: @customer, local: true do |form| %>

 <p>
		<%= form.label :name %><br>
		<%= form.text_area :name %>
	</p>
	<p>Select coffee</p>
	<%= form.collection_check_boxes :kopi_ids, @kopis, :id, :name %>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', customers_path %>
<%= link_to 'Delete', customer_path, method: :delete, data: { confirm: 'Confirm delete?'} %>