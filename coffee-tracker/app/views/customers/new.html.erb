<h1>Add new customer</h1><br>

<%= form_with scope: :customer, url: customers_path, local: true do |form| %>

	<p>
		<%= form.label :name %><br>
		<%= form.text_area :name %>
	</p>
	<p>Select coffee</p>
	<%= form.collection_check_boxes :kopi_ids, @kopis, :id, :name %>

	<p>
		<%= form.submit %>
	</p>

	<% end %>

	<%= link_to 'Back', customers_path %>