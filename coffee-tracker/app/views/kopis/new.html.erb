<h1>Submit a new coffee</h1><br>

<%= form_with scope: :kopi, url: kopis_path, local: true do |form| %>

	<p>
		<%= form.label :name %><br>
		<%= form.text_area :name %>
	</p>

	<%= form.collection_select :roast_id, @roasts, :id, :name %><br>
	<%= form.collection_select :origin_id, @origins, :id, :name %>

	<p>
		<%= form.submit %>
	</p>

	<% end %>

	<%= link_to 'Back', root_path %>