<p id="notice">
		<%= notice %>




<h3>Kopi Name: <%= @kopi.name %> </h3>
<p>Roast Level: <%= @kopi.roast.name %> </p>
<p>Origins: <%= link_to @kopi_farm.location, @kopi_farm %> </p>

<h4>Our Suppliers</h4>

      <% if @kopi.customers.length!=0%>

<table class="table">
	<tr>
            <th scope="col">#</th>
		<th scope="col">Name</th>

	</tr>
	<% @kopi.customers.each_with_index do |customer, i| %>
		<tr>
            <td> <%=i+1 %> </td>
            <td> <%= customer.name %> </td>
            </tr>
      <% end %>
</table>
<% else %>

<h5>Sorry, no one carries this kopi yet. </h5>

<% end%>

<br/><%= link_to 'Back to Kopis', all_kopis_path %>