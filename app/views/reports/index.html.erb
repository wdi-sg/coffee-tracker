<div class="container">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Home", kopis_path %></li>
          <li class="breadcrumb-item active" aria-current="page"><%= link_to 'Reports', reports_path() %></li>
        </ol>
      </nav>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h2>Reports</h2>

      <h4>Total Sales of the Day</h4>
      <p>Number of orders: <%= @total_orders %></p>
      <p>Total sales: $<%= @total_sales %></p>

      <h4>Sales by Kopi</h4>
      <div class="row mb-3">
        <% @kopis.each do |kopi| %>
          <div class="col-3 mb-3">
            <div class="card"><div class="card-body">
              <%= link_to kopi.name, reports_kopi_path(kopi) %>
            </div></div>
          </div>
        <% end %>
      </div>

      <h4>Sales by Origin</h4>
      <div class="row mb-3">
        <% @origins.each do |origin| %>
          <div class="col-3 mb-3">
            <div class="card"><div class="card-body">
              <%= link_to origin.name, reports_origin_path(origin) %>
            </div></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>