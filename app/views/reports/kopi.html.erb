<div class="container">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Home", kopis_path %></li>
          <li class="breadcrumb-item" aria-current="page"><%= link_to 'Reports', reports_path() %></li>
          <li class="breadcrumb-item active" aria-current="page"><%= link_to @kopi.name, reports_kopi_path(@kopi) %></li>
        </ol>
      </nav>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h2>Report for <%= @kopi.name %></h2>

      <p>Number of orders: <%= @total_orders %></p>
      <p>Total sales: $<%= @total_sales %></p>

      <h4>Orders</h4>
      <ul>
        <% @orders_by_kopi.each do |order| %>
          <li><%= link_to order.id, order_path(order) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>