<h1>Edit Origin</h1>

<%= form_with(model: @origin, local: true) do |form| %>

  <% if @origin.errors.any? %>
	<div id="error_explanation">
	  <h2>
		<%= pluralize(@origin.errors.count, "error") %> prohibited
		this origin from being saved:
	  </h2>
	  <ul>
		<% @origin.errors.full_messages.each do |msg| %>
		  <li><%= msg %></li>
		<% end %>
	  </ul>
	</div>
  <% end %>

  <p>
	<%= form.label :name %><br>
