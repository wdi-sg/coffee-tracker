<%= link_to 'Back', root_path %>


<p>
  <strong>Name:</strong>
  <%= @origin.name%>
</p>

<p>
  <strong>Location:</strong>
  <%= @origin.location %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @origin.phone %>
</p>


<ul>

<% @origin.kopi.each do |kopi| %>
  <li>
    <%=kopi.name %><br/>
    <%=kopi.roast %>
  </li>
<% end %>
</ul>

<%= link_to 'Edit', edit_origin_path(@origin) %>
<%= link_to 'Delete', origin_path(@origin),
    method: :delete,
    data: { confirm: 'Are you sure?' }  %>
