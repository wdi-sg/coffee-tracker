<h1 class="display-4">List of origins</h1>


<table class="table">
	<thead>
		<tr>
			<th scope="col">Location</th>
			<th scope="col">Phone</th>
			<% if current_user.try(:admin?) %>

			<th scope="col">Show</th>
			<th scope="col">Edit</th>
			<th scope="col">Destroy</th>
			<% end %>

		</tr>
	</thead>
	<tbody>
		<% @origins.each do |origin| %>
		<tr>
			<td><%= origin.location %></td>
			<td><%= origin.phone %></td>
			<% if current_user.try(:admin?) %>
			<td><%= link_to 'Show', origin_path(origin) %></td>
			<td><%= link_to 'Edit', edit_origin_path(origin) %></td>
			<td><%= button_to 'Destroy', origin_path(origin),
  method: :delete,
  data: { confirm: 'Are you sure?' } %></td>

			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to('New origin', new_origin_path, {:class => "btn btn-primary"} )%>