<h2>Origin Index</h2>
<div class="add-item">
  <% if user_signed_in? %>
    <%= link_to '+ Add Origin', new_origin_path, class: "btn btn-outline-primary" %>
  <% end %>
</div>

<table class="table table-sm table-hover">
  <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Location</th>
        <th scope="col">Phone</th>
        <th scope="col"></th>
      <% if user_signed_in? %>
        <th scope="col"></th>
        <th scope="col"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @origins.each do |origin| %>
      <tr>
          <td><%= origin.id %></td>
          <td><%= origin.location %></td>
          <td><%= origin.phone %></td>
          <td><%= link_to 'Show', origin_path(origin) %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_origin_path(origin) %></td>
          <td><%= link_to 'Delete', origin_path(origin),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
