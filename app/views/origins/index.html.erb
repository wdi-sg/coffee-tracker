<h1>Listing Origins</h1>

<table>
  <tr>
    <th>Origin Location</th>
    <th>Phone</th>
    <th></th>
  </tr>

  <% @origins.each do |origin| %>
    <tr>
      <td><%= origin.location %></td>
      <td><%= origin.phone %></td>
      <td><%= link_to 'Show', origin_path(origin) %></td>
      <td><%= link_to 'Edit', edit_origin_path(origin) %></td>

      <td><%= link_to 'Destroy', origin_path(origin),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

