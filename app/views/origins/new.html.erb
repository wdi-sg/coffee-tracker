<div class="container">

	<h1 class="display-4 text-center">New Kopi Origin</h1>


	<%= form_with scope: :origin, url: origins_path, local: true do |form| %>
		<div class="form-group mt-5" style="width: 50%; margin: 0 auto">

		  <p>
		    <%= form.label :location %><br>
		    <%= form.text_field :location, {:class => "form-control"} %>
		  </p>

		  <p>
		    <%= form.label :phone_number %><br>
		    <%= form.text_field :phone_number, {:class => "form-control"} %>
		  </p>

		  <%= link_to 'Back', origins_path, {:class => "btn btn-outline-secondary"} %>

		  <%= form.submit "Save Origin", class: "btn btn-primary" %>

		</div>
	<% end %>



</div>