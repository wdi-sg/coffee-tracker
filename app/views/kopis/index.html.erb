<% if user_signed_in? %>
<%= link_to 'New Kopi', new_kopi_path %>
<%= link_to 'log out', destroy_user_session_url, method: :delete %>
<% else %>
<%= link_to 'log in', new_user_session_url %>
<% end %>



<h1>Listing Kopis</h1>

<table>
  <tr>
    <th>Kopi Name</th>
    <th>Roast Type</th>
    <th>Origin</th>
    <th></th>
  </tr>

  <% @kopis.each do |kopi| %>
    <tr>
      <td><%= kopi.name %></td>
      <td><%= kopi.roast.name %></td>
      <td><%= kopi.farm.name %></td>
      <td><%= link_to 'Show', kopi_path(kopi) %></td>
    </tr>
  <% end %>
</table>