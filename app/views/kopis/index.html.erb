<h1>Listing All Kopis</h1>

<div class="container">
	 <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Roastedness</th>
          <th scope="col">Origin</th>
        </tr>
      </thead>

      <tbody>
	      <% @kopis.each do|t| %>
	        <tr>
	      		<td><%= t.name %></td>
						<td><%= t.roastedness %></td>
						<td><%= t.farm.location %></td>
	    		</tr>
		  	<% end %>
      </tbody>

    </table>
  </div>
</div>

<br/>

<li><%= link_to 'View All Farms', farms_path %></li>

<%- if user_signed_in? %>
  <li><%= link_to 'Add New Kopi', new_kopi_path %></li>
  <li><%= link_to t('auth.sign_out'), destroy_user_session_path, method: 'delete' %></li>

<% else %>
  <li><%= link_to t('auth.sign_in'), new_user_session_path %></li>
  <li><%= link_to t('auth.sign_up'), new_user_registration_path %></li>
<% end %>