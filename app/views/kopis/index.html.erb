<% if user_signed_in? %>
<h3><%= current_user.email %></h3>
  <%= link_to 'log out', destroy_user_session_url, method: :delete %>
<% else %>
  <%= link_to 'log in', new_user_session_url %>
<% end %>


<h1>Listing kopis</h1>

  <% @kopis.each do |kopi| %>

      <h2>Name: <%= kopi.name %></h2>
      <p>Roast: <%= kopi.roast.name %></p>
      <p>Origin: <%= kopi.origin.name %></p>
      <p>Customer:</p>
      <ul>
        <% kopi.customers.each do |customer| %>
          <li><%= customer.name %></li>
        <% end %>
      </ul>
      <p><%= link_to 'Show', kopi_path(kopi) %></p>
      <p><%= link_to 'Edit', edit_kopi_path(kopi) %></p>
      <p><%= link_to 'Destroy', kopi_path(kopi),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></p>
  <% end %>


<%= link_to 'Create New', new_kopi_path %>
