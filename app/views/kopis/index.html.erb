<h1>List of kopis</h1>
	<table>
		<% @kopis.each do |kopi| %>
		<tr>
			<th>Name</th>
			<th>Roast</th>
			<th>Origin</th>
		</tr>
		<tr>
			<td><%= kopi.name %></td>
			<td><%= kopi.roast %></td>
			<td><%= kopi.origin %></td>
		  <td><%= link_to 'Show', kopi_path(kopi)%></td>
			<td><%= link_to 'Delete', kopi_path(kopi), method: :delete%></td>
		</tr>
		<% end %>
	</table><br>
	<%= link_to 'Create kopi', new_kopi_path %>
