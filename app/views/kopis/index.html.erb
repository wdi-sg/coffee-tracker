<p id="notice"><%= notice %></p>

<h1>Kopis</h1>

<form method="GET" action="/kopis">
	<label>Sort By Popularity</label>
	<select name="sort">
		<option value="asc">Ascending</option>
		<option value="desc">Descending</option>
	</select>

	<button type="submit">Sort</button>
</form>

<br>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Roast Type</th>
      <th>Origin</th>
      <th>Price (per pound)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kopis.each do |kopi| %>
      <tr>
        <td><%= kopi.name %></td>
        <td><%= kopi.roast.name %></td>
        <td><%= kopi.origin.name %></td>
        <td>$<%= kopi.price %></td>
        <td><%= link_to 'Show', kopi %></td>
        <td><%= link_to 'Edit', edit_kopi_path(kopi) %></td>
        <td><%= link_to 'Destroy', kopi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kopi', new_kopi_path %>