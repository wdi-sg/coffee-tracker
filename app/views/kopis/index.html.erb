<h2>Kopi Index</h2>
<div class="add-item">
  <% if user_signed_in? %>
    <%= link_to '+ Add Kopi', new_kopi_path, class: "btn btn-outline-primary add-item" %>
  <% end %>
</div>

<table class="table table-sm table-hover">
  <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Coffee</th>
        <th scope="col">Roast</th>
        <th scope="col">Origin</th>
        <th scope="col"></th>
      <% if user_signed_in? %>
        <th scope="col"></th>
        <th scope="col"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @kopis.each do |kopi| %>
      <tr>
          <td><%= kopi.id %></td>
          <td><%= kopi.name %></td>
          <td><%= kopi.roast.roast %></td>
          <td><%= kopi.origin.location %></td>
          <td><%= link_to 'Show', kopi_path(kopi) %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_kopi_path(kopi) %></td>
          <td><%= link_to 'Delete', kopi_path(kopi),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>