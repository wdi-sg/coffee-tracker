
<h3>Edit Kopi</h3>

<%= form_with scope: :kopi, model: @kopi, local: true do |form| %>
  <% if @kopi.errors.any? %>
    <% @kopi.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

    <%= form.collection_select :roast_id, @roasts, :id, :name %>

    <%= form.collection_select :origin_id, @origins, :id, :location %>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', root_path, class: "btn btn-dark" %>
