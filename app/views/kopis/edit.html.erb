<h1>Edit Kopi</h1>

<%= form_with(model: @kopi, local: true) do |form| %>

  <% if @kopi.errors.any? %>
	<div id="error_explanation">
	  <h2>
		<%= pluralize(@kopi.errors.count, "error") %> prohibited
		this kopi from being saved:
	  </h2>
	  <ul>
		<% @kopi.errors.full_messages.each do |msg| %>
		  <li><%= msg %></li>
		<% end %>
	  </ul>
	</div>
  <% end %>

  <p>
	<%= form.label :name %><br>
	<%= form.text_field :name %>
  </p>

	<p><%= form.label :roast %> <%= form.collection_select :roast_id, @roasts, :id, :name %></p>

	<p><%= form.label :origin %> <%= form.collection_select :origin_id, @origins, :id, :name %></p>

  <p>
	<%= form.submit %>
  </p>

<% end %>

