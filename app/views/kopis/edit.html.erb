<h1>Edit Kopi</h1>

<%= form_with scope: :kopi, model: @kopi, local: true do |form| %>

  <p>
    <%= form.label :name, 'Kopi Name' %><br />
    <%= form.text_field :name, :input_html => { :value => @kopi.name }%>
  </p>

  <p>
    <%= form.submit %>
  </p>

  <% end %>

  <%= link_to 'Back', root_path %>
