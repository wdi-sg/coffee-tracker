<h2>Edit Kopi</h2>
<br>

<%= form_with scope: :kopi, url: kopis_path, local: true do |form| %>
<div class="form-group">

    <%= form.label :origin, for:"exampleFormControlInput1" %><br>
    <%= form.collection_select :origin_id, @origins, :id, :location %>
    <br>
    <br>

    <%= form.label :name, for:"exampleFormControlInput1" %><br>
    <%= form.text_field :name, class: "form-control" %>
    <br>

    <%= form.label :roast_id, for:"exampleFormControlInput1" %><br>
    <%= form.collection_select :roast_id, @roasts, :id, :roast %>
    <br>
    <br>


    <%= form.label :customer, for:"exampleFormControlInput1" %><br>
    <div class="format-checkboxes">
      <%= form.collection_check_boxes :customer_ids, @customers, :id, :name %>
    </div>

    <br>
    <br>

    <%= form.submit "Update", class: "btn btn-primary" %>

</div>
<% end %>