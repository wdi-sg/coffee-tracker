<h3>Kopi</h3>

<p>
  <strong>Name:</strong>
  <%= @kopi.name %>
</p>

<p>
  <strong>Roast:</strong>
  <%= @kopi.roast.name %>
</p>

<p>
  <strong>Origin:</strong>
  <%= @kopi.origin.location %>
</p>

<p>
  <strong>Stocked By:</strong>
  	<ul>
  <% @kopi.customers.each do |customer| %>
  	<li><%= customer.name %></li>
  <% end %>
  	</ul>
</p>

<% if user_signed_in? %>
	<% if current_user.admin %>
		<%= link_to 'Edit', edit_kopi_path(@kopi), class: "btn btn-warning" %>
	<% end %>
<% end %>
<%= link_to 'Back', root_path, class: "btn btn-dark" %>