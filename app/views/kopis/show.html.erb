<p class="display-4">
	<%= @kopi.name %>
</p>

<p>
	<strong>Roast:</strong>
	<%= @kopi.roast.name %>
</p>
<p>
	<strong>Origin:</strong>
	<%= @kopi.origin.location %>
</p>
<p>
	<strong>Price (/kg):</strong>
	<%= @kopi.price %>
</p>
<p>
	<strong>Customers:</strong>
	<% @kopi.customers.each do |customer| %>
	<%= customer.name %>
	<% end %>
</p>




<p>
	<%= link_to('Edit', edit_kopi_path, {:class => "btn btn-warning"}) %>
	<%= link_to('Back', kopis_path, {:class => "btn btn-primary"})%>
</p>