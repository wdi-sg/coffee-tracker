<h2>Kopi</h2>
<br>

  <h4><%= @kopi.name %></h4>
  <div class="content-div">
    <label>Roast:</label>
    <p><%= @kopi.roast.roast %></p>
    <label>Origin:</label>
    <br>
    <p><%= @kopi.origin.location%></p>
  </div>

  <% if user_signed_in? %>
    <span><%= link_to 'Edit', edit_kopi_path(@kopi), class:"btn btn-primary" %></span>
    <span><%= link_to 'Delete', kopi_path(@kopi),
            method: :delete,
            data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></span>
  <% end %>
<br>
<br>
<br>

<h5>Customer List for this Kopi</h5>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Customer Name</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @kopi.customers.each do |customer| %>
      <tr>
        <td style="width: 50px"><%= customer.id %></td>
        <td style="width: 150px"><%= customer.name %></td>
        <td><%= link_to 'Show', customer_path(customer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>