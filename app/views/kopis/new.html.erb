<h1>New Coffee</h1>

<%= form_with scope: :kopis, url: kopis_path, local: true do |form| %>

  <%= form.label :name %><br>
	<%= form.text_field(:name, :class => 'form-control') %>

  <%= form.label :roast %><br>
	<%= form.collection_select :roast_id, @roasts, :id, :name %>

	<%= form.label :origin %><br>
	<%= form.collection_select :origin_id, @origins, :id, :name %>

	<%= form.submit :class => 'btn btn-primary' %>

<% end %>