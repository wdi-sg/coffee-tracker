<%= form_with scope: :kopi, url: kopis_path, local: true do |form| %>

    <%= form.collection_select :roast_id, @roasts, :id, :name %>
    <%= form.collection_select :origin_id, @origins, :id, :location %>
    <%= form.collection_check_boxes :customer_ids, @customers, :id, :name %>



  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>




  <p>
    <%= form.submit %>
  </p>


<% end %>



<%= link_to 'Back', root_path %>

<% if user_signed_in? %>
<%= link_to 'New Kopi', new_kopi_path %>
<% end %>
