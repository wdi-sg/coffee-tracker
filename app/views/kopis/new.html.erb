<h1>Create New Kopi</h1>
<%= form_with scope: :kopi, url: kopis_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :roast %><br>
    <%= form.collection_radio_buttons :roast_id, @roasts, :id, :name %>
  </p>

  <p>
    <%= form.label :origin %><br>
    <%= form.collection_radio_buttons :origin_id, @origins, :id, :name %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
