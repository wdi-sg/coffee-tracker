<%= form_with scope: :kopi, url: kopis_path, local: true do |form| %>
  <% if @kopi.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@kopi.errors.count, "error") %> prohibited
        this kopi from being saved:
      </h2>
      <ul>
        <% @kopi.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :location %><br>
    <%= form.collection_select :origin_id, @origins, :id, :location %>
  </p>

  <p>
    <%= form.label :roast %><br>
    <%= form.collection_select :roast_id, @roasts, :id, :name %>
  </p>


  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back to Kopis Index', kopis_path %>