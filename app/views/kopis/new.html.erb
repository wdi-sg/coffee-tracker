<h1>Add new kopi</h1>
<%= form_with scope: :kopi, url: kopis_path, local: true do |form| %>

  <%= form.collection_select :roast_id, @roasts, :id, :name, {include_blank: 'Select roast'}%><br/>
  <%= form.collection_select :origin_id, @origins, :id, :location, {include_blank: 'Select origin'} %>

  <p>
    <%= form.label 'name of kopi' %><br>
    <%= form.text_area :name %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'back', root_path %>
