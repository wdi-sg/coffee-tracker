<h1>Add a new type of Coffee!</h1>
<%= form_with scope: :kopi, url: kopis_path, local: true do |form| %>
  <p>
    <%= form.label :Name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :Roastedness %><br>
    <%= form.collection_select :roast, @roasts, :name, :name %>
  </p>
  <p>
    <%= form.label :Origin %><br>
    <%= form.collection_select :origin_id, @origins, :id, :location %>
  </p>
  <%= form.submit %>
</p>
<% end %>
