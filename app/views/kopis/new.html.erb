<h1 class="mt-4 text-center">Add Kopi</h1>

<%= form_with scope: :kopi, url: kopis_path, local: true, :class => "container mt-4" do |form| %>

	<div class="form-group">
    	<%= form.label :name %><br>
    	<%= form.text_field :name, :class => "form-control" %>
	</div>

	<div class="form-group">
    	<%= form.label :origin %><br>
    	<%= form.collection_select :origin_id, @origins, :id, :name, {}, {:class => "form-control"} %>
	</div>

	<div class="form-group">
    	<%= form.label :origin %><br>
    	<%= form.collection_select :roastedness_id, @roastednesses, :id, :roast, {}, {:class => "form-control"} %>
	</div>

	<div class="form-group">
    	<%= form.label :price %><br>
    	<%= form.number_field :price, {:step =>0.01, :class => "form-control"} %>
	</div>

 
    <%= form.submit "Add Kopi", :class => 'btn btn-dark' %>
 
<% end %>