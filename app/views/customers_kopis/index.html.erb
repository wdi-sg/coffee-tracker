<h1>Customers Kopis</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Kopi</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers_kopis.each do |customers_kopi| %>
      <tr>
        <td><%= customers_kopi.customer %></td>
        <td><%= customers_kopi.kopi %></td>
        <td><%= link_to 'Show', customers_kopi %></td>
