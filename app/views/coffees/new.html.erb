<%= form_with scope: :coffee, url: coffees_path, local: true do |form| %>
    
    <%= f.collection_check_boxes :customers_ids, @customers, :id, :name %>

    <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    </p>
    
    <p>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
    </p>
    
    Roast<br>
    <%= form.collection_select :roast_id, @roasts, :id, :name %><br><br>

    Location<br>
    <%= form.collection_select :origin_id, @origins, :id, :location %><br><br>
    
    <p>
    <%= form.submit%>
    </p>
<% end %>

<%= link_to 'Back', coffees_path %>