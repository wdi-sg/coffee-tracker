<h1>New Order</h1>

<%= form_with scope: :order, url: orders_path, local: true do |form| %>

  <p>
    <%= form.label :weight %><br>
    <%= form.text_field :weight %>
  </p>

  <p>
  	<%= form.label "Kopi" %><br>
  	<%= form.collection_select :kopi_id, @kopis, :id, :name %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back', orders_path, class: 'btn btn-success' %>