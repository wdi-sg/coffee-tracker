<h1>Create New Order</h1>

<%= form_with scope: :order, url: orders_path, local: true do |form| %>
  
  <%= form.label :kopi, 'Kopi: ' %>&emsp;
  <%= form.collection_select :kopi_id, @kopis, :id, :name %>
  <br/>

  <p>
    <%= form.label :weight %><br>
    <%= form.number_field :weight %><br><br>

  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
<br/><br/>
<%= link_to 'Back to Order List', orders_path %>
<br/><br/>
