
<%= form_with scope: :order, url: orders_path, local: true do |form| %>
	<div class="form-group">
		<%= form.label :kopi %><br>
		<%= form.collection_select :kopi_id, @kopis, :id, :name, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= form.label :weight %><br>
		<%= form.number_field :weight, class: "form-control", placeholder: "Weight in pounds" %>
	</div>



	<input type="submit" name="submit" class="btn btn-primary">
<% end %>