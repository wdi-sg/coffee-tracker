<h1 class="display-4">Index of Orders</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">User</th>
			<th scope="col">Kopi Name</th>
			<th scope="col">Weight</th>
			<th scope="col">Price per Pound</th>
			<th scope="col">Total Price</th>
			<th scope="col">View</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
			<tr>
				<th scope="row"><%= order.id %></th>
				<td><%= order.user_id %></td>
				<td><%= order.kopi.name %></td>
				<td><%= order.weight %></td>
				<td><%= order.kopi.price %></td>
				<td><%= order.weight * order.kopi.price %></td>
				<td><%= link_to 'Show', order_path(order) %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to('New order', new_order_path, {:class => "btn btn-primary btn-lg"}) %>