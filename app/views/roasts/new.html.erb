<h1 class="display-4">New Roast</h1>

<%= form_with scope: :roast, url: roasts_path, local: true do |form| %>

	<div class="form-group">
		<%= form.label :name %><br>
		<%= form.text_field(:name, {:class => "form-control"}) %>
	</div>

	<div class="form-group">
		<%= form.submit({:class => "btn btn-primary"}) %>
	</div>
<% end %>