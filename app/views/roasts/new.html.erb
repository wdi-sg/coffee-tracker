<h1>New Roast</h1>

<%= form_with scope: :roast, url: roasts_path, local: true do |form| %>
  <p>
    <%= form.label :roast %><br/>
    <%= form.text_field :roast %>
  </p>

  <%= @roast.errors.messages[:roast][0] %>

  <p class="error">
  	Helper method<br/>
    <%= show_errors(@roast, :roast) %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back', roasts_path, class: 'btn btn-success' %>