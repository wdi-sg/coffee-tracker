<h1>Roasts</h1>

<% if current_user.admin? %>
    <%= link_to 'New Roast', new_roast_path %>
<% end %>



 <% @roasts.each do |roast| %>
<ul>
    <li><%= link_to roast.name, roast_path(roast) %></li>
</ul>
 <% end %>


 <% if user_signed_in? %>
    <%= link_to 'log out', destroy_user_session_url, method: :delete %>
<% else%>
    <%= link_to 'log in', new_user_session_url %>
<% end %>