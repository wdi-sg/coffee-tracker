<h1 class="display-4">Index of Roasts</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col">View</th>
		</tr>
	</thead>
	<tbody>
		<% @roasts.each do |roast| %>
			<tr>
				<th scope="row"><%= roast.id %></th>
				<td><%= roast.name %></td>
				<td><%= link_to 'Show', roast_path(roast) %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<% if current_user.try(:admin?) %>
	<%= link_to('New roast', new_roast_path, {:class => "btn btn-primary btn-lg"}) %>
<% end %>