<h1 class="display-4"><%= @roast.name %></h1>

<%= form_with scope: :roast, model: @roast, local: true do |form| %>

	<div class="form-group">
		<%= form.label :name %><br>
		<%= form.text_field(:name, {:class => "form-control"}) %>
	</div>

	<div class="form-group">
		<%= form.submit({:class => "btn btn-primary"}) %>
	</div>
<% end %>