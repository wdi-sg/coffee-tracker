


	<div class="container">

		<h1 class="display-4 text-center">Roast: <%= @roast.name %></h1>

		<% if @roast.kopi[0] %>
			<table class="table">
				<thead class="thead-dark">
				  <tr>
				    <th class="text-center">Kopis</th>
				    <th></th>
				  </tr>
				</thead>

  			<% @roast.kopi.each do |x| %>
			    <tr>
			      <td class="text-center"><%= x.name %></td>
			      <td style="width: 20%"><%= link_to 'Show', kopi_path(x) %> | <%= link_to 'Edit', edit_kopi_path(x) %> | <%= link_to 'Destroy', kopi_path(x),
			        method: :delete,
			        data: { confirm: 'Are you sure?' } %></td>
			    </tr>
			  <% end %>
			</table>
		<% elsif %>
			<p class="lead text-center mb-5 mt-5">No Kopis added for this Roast yet</p>
		<% end %>





		<%= link_to 'Back', roasts_path, {:class => "btn btn-outline-secondary"} %>

	</div>