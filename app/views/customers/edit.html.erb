<h1>Edit Customer</h1>

<%= form_with scope: :customer, model: @customer, local: true do |form| %>

	<p>
		<%= form.label :name %><br>
		<%= form.text_field :name %>
	</p>

	<p><strong>Select kopi stock</strong></p>
	<%= form.collection_check_boxes :kopi_ids, @kopis, :id, :name %>

	<p><%= form.submit %></p>

<% end %>