<h2>Customers Index</h2>
<div class="add-item">
  <% if user_signed_in? %>
    <p><%= link_to '+ Add Customer', new_customer_path, class: "btn btn-outline-primary add-item"  %></p>
  <% end %>
</div>

<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Customer name</th>
      <th scope="col"></th>
    <% if user_signed_in? %>
      <th scope="col"></th>
      <th scope="col"></th>
    <% end %>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.name %></td>
        <td><%= link_to 'Show', customer_path(customer) %></td>
      <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Delete', customer_path(customer),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>