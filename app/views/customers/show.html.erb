<h1>Show Customer</h1>

<p>
  <strong>Name:</strong>
  <%= @customer.name %>
</p>

<strong>Kopis:</strong>

<table class="table table-striped">
	<thead>
	  <tr>
	  	<th scope="col">S/N</th>
	    <th scope="col">Name</th>
	    <th scope="col">Origin Name</th>
	    <th scope="col">Origin Location</th>
	    <th scope="col">Roast</th>
	    <th scope="col">Price Per Pound</th>
	  </tr>
	</thead>

	<tbody class="table-striped">
		<% @customer.kopis.each_with_index do |kopi, index| %>
			<tr>
      	<td>
        	<%= index + 1 %>
        </td>
        <td>
        	<%= kopi.name %>
        </td>

        <td>
        	<%= kopi.origin.name %>
        </td>

        <td>
        	<%= kopi.origin.location %>
        </td>

        <td>
        	<%= kopi.roast.name %>
        </td>

        <td>
        	<%= "$" + kopi.price_per_pound.to_s %>
        </td>
      </tr>
		<% end %>
	</tbody>
</table>