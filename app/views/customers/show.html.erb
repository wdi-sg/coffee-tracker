<div class="container">

  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Home", kopis_path %></li>
          <li class="breadcrumb-item" aria-current="page"><%= link_to 'Customers', customers_path() %></li>
          <li class="breadcrumb-item active" aria-current="page"><%= link_to @customer.name, customer_path(@customer) %></li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <h2><%= @customer.name  %></h2>
      <table class="table">
        <thead>
          <th>Kopi Name</th>
          <th>Roast</th>
          <th>Origin</th>
        </thead>
        <tbody>
          <% @kopis.each do |kopi| %>
            <tr>
              <td><%= link_to kopi.name, kopi_path(kopi) %></td>
              <td><%= link_to kopi.roast.roastedness, roast_path(kopi.roast)  %></td>
              <td><%= link_to kopi.origin.name, origin_path(kopi.origin)  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <%= link_to "Edit Customer", edit_customer_path, class:"btn btn-primary mb-3" %>
      <%= link_to "Delete Customer", customer_path(@customer), method: :delete, class:"btn btn-danger mb-3" %>
    </div>
  </div>
</div>