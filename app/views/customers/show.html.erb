<%= link_to "Get New Kopis", edit_customer_path, class: "btn btn-info" %>

<table class="table">
	<thead>
	  <tr>
	    <th scope="col">#</th>
	    <th scope="col">Name</th>
	    <th scope="col">Roast</th>
	    <th scope="col">Price Per Pound ($)</th>
	  </tr>
	</thead>
	<tbody>
	<% @kopis.each_with_index do |kopi, index| %>
    <tr>
      <th scope="row"><%= index %></th>
      <td><%= link_to kopi.name, kopi %></td>
      <td><%= kopi.roast %></td>
      <td><%= kopi.price_per_pound %></td>
    </tr>
		<p>  </p>
	<% end %>
	</tbody>
</table>