
<h3>Add Your Customer.</h3>
<%= form_with scope: :customer, url: customers_path, local: true do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, :required => true %>
  </p>

  <p>

  <%= form.collection_check_boxes :kopi_ids, @kopis, :id, :name %>

  </p>


  <p>
    <%= form.submit 'Add Customer!', :class => 'btn btn-success' %>
  </p>
<% end %>

