<h1>create a new Customer/stock</h1>


<%= form_with scope: :customer, url: customers_path, local: true do |form| %>

	<p>
		<%= form.label :name %><br>
		<%= form.text_area :name %>
	</p>

	<p><strong>Select kopi stock</strong></p>
	<%= form.collection_check_boxes :kopi_ids, @kopis, :id, :name %>

	<p>
		<%= form.submit %>
	</p>
<% end %>